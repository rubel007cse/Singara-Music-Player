<?xml version="1.0" encoding="utf-8"?>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/casualmood"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:background="@drawable/casual"
                android:gravity="center">

                <TextView
                    android:id="@+id/casultracks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1200 TRACKS"
                    android:textColor="#ffcdd2"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:layout_marginTop="50dp"
                    android:textStyle="bold"/>

                </LinearLayout>


            <LinearLayout
                android:id="@+id/partymood"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:background="@drawable/party" >

                <TextView
                    android:id="@+id/partytracks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1200 TRACKS"
                    android:textColor="#b3e5fc"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:layout_marginTop="105dp"
                    android:textStyle="bold"/>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/lovemood"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:background="@drawable/love" >


                <TextView
                    android:id="@+id/lovetracks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1200 TRACKS"
                    android:textColor="#ffccbc"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:layout_marginTop="110dp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/sadmood"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:background="@drawable/sad" >


                <TextView
                    android:id="@+id/sadtracks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1200 TRACKS"
                    android:textColor="#b0bec5"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:layout_marginTop="110dp"
                    android:textStyle="bold"/>

                </LinearLayout>

            <LinearLayout
                android:id="@+id/happymood"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:background="@drawable/happy" >


                <TextView
                    android:id="@+id/happytracks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1200 TRACKS"
                    android:textColor="#d1c4e9"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:layout_marginTop="110dp"
                    android:textStyle="bold"/>

                </LinearLayout>

            <LinearLayout
                android:id="@+id/angrymood"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:background="@drawable/angry" >


                <TextView
                    android:id="@+id/angrytracks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1200 TRACKS"
                    android:textColor="#ffab91"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:layout_marginTop="130dp"
                    android:textStyle="bold"/>

                </LinearLayout>


        </LinearLayout>
    </ScrollView>